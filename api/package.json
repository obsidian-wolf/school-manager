{
	"name": "school-manager-api",
	"engines": {
		"node": "~20",
		"npm": "~10"
	},
	"scripts": {
		"local": "dotenv -e .env.local -- concurrently \"npm run start:watch\" \"npm run routes:gen:watch\"",
		"build": "rimraf --glob build/* && tsoa spec-and-routes && tsc",
		"lint": "eslint src",
		"lint:fix": "eslint src/ --ext .ts,.js --fix",
		"db:local": "cross-env-shell \"./runlocaldb.sh\"",
		"db:test": "cross-env-shell \"./runtestdb.sh\"",
		"worker:local": "dotenv -e .env.local -- nodemon --exec \"npx ts-node src/worker.ts\"",
		"worker": "node build/worker.js",
		"start": "node build/index.js",
		"start:watch": "nodemon --exec \"npx ts-node src/index.ts\"",
		"routes:gen:watch": "nodemon -x \"npm run routes:gen\"",
		"routes:gen": "npx tsoa spec-and-routes",
		"sync-api": "orval",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@hokify/agenda": "latest",
		"@ngneat/falso": "^7.2.0",
		"@types/bcryptjs": "latest",
		"@types/body-parser": "latest",
		"@types/cookie-parser": "latest",
		"@types/cors": "latest",
		"@types/express": "latest",
		"@types/jsonwebtoken": "latest",
		"@types/mime-types": "latest",
		"@types/node": "latest",
		"@types/swagger-ui-express": "latest",
		"@types/uuid": "latest",
		"axios": "latest",
		"bcryptjs": "latest",
		"body-parser": "latest",
		"cloudinary": "latest",
		"cookie-parser": "latest",
		"copyfiles": "latest",
		"cors": "latest",
		"date-fns": "latest",
		"express": "latest",
		"express-basic-auth": "latest",
		"fast-safe-stringify": "latest",
		"jsonwebtoken": "latest",
		"mime-types": "latest",
		"mongodb": "latest",
		"orval": "latest",
		"pino": "latest",
		"pino-http": "latest",
		"rimraf": "latest",
		"swagger-ui": "latest",
		"swagger-ui-express": "latest",
		"tsoa": "latest",
		"uuid": "latest",
		"zod": "latest"
	},
	"overrides": {
		"jsonpath-plus": "^10"
	},
	"devDependencies": {
		"@eslint/eslintrc": "latest",
		"@eslint/js": "latest",
		"concurrently": "latest",
		"cross-env": "latest",
		"dotenv-cli": "latest",
		"eslint": "latest",
		"eslint-config-prettier": "latest",
		"globals": "latest",
		"nodemon": "latest",
		"pino-pretty": "latest",
		"prettier": "latest",
		"ts-node": "latest",
		"typescript": "latest",
		"typescript-eslint": "latest"
	}
}
