{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
